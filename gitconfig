[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[core]
  editor = nvim
  whitespace = nowarn
  excludesfile = ~/.gitignore
  ignorecase = false
[merge]
  tool = opendiff
[alias]
  b = branch
  m = merge
  co = checkout
  cp = cherry-pick
  wt = worktree
  wa = worktree add
  wr = worktree remove
  wl = worktree list
  wtf = config remote.origin.fetch "+refs/heads/*:refs/remotes/origin/*"
[branch]
  autosetuprebase = always
[push]
  default = simple
[pull]
  rebase = true
[commit]
  gpgsign = true
[gpg]
  program = gpg
[includeIf "gitdir:~/"]
  path = ~/.gitconfig-user
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
